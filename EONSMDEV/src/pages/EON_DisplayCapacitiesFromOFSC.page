                            var indexGMT;
                            indexGMT = dateKey.indexOf('GMT');
                            dateKey =  dateKey.slice(0, indexGMT);
                            dateKey = dateKey + 'GMT ' + oD.getFullYear();
                            if (x==scanfortoday)
